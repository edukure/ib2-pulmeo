{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "import/no-anonymous-default-export": [
      "error",
      { "allowAnonymousFunction": true, "allowArrowFunction": true }
    ],
    "@next/next/no-document-import-in-page": "off"
  }
}
